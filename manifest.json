{
    "manifest_version": 3,
    "name": "Download Manager",
    "version": "1.0",
    "description": "Checks if a file already exists in the database before downloading.",
    "permissions": [
      "downloads",
      "storage",
      "webRequest",
      "webRequestBlocking",
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "services/service.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "res/icon16.png",
        "32": "res/icon32.png",
        "128": "res/icon128.png"
      }
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "web_accessible_resources": [
      {
        "resources": ["index.html"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  